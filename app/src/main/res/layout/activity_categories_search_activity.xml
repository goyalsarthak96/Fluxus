<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/yokaty"
    tools:context="com.example.sarthak.move.categories_search_activity">

  <!--  <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="click"/>
-->


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="click"
        android:layout_centerHorizontal="true"
        android:id="@+id/cultural_text_layout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cultural_image"
            android:clickable="false"
            android:src="@mipmap/rsz_1cultural"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CULTURAL CRUISE"
            android:layout_below="@+id/cultural_image"
            android:layout_centerHorizontal="true"
            android:id="@+id/cultural_text"
            android:clickable="false"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="click"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cultural_text_layout"
        android:layout_marginRight="2dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/literary_text_layout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/literary_image"
            android:clickable="false"
            android:src="@mipmap/rsz_quiz"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUIZ FEST"
            android:clickable="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/literary_image"
            android:id="@+id/literary_text"
            android:textColor="@android:color/white" />
    </RelativeLayout>





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/cultural_text_layout"
        android:onClick="click"
        android:id="@+id/technical_text_layout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/technical_image"
            android:clickable="false"
            android:src="@mipmap/rsz_technical"/>
        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TECH THEATRE"
            android:clickable="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/technical_image"
            android:id="@+id/technical_text"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>








    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="55dp"
        android:onClick="click"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/literary_text_layout"
        android:id="@+id/informal_text_layout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/informal_image"
            android:clickable="false"
            android:src="@mipmap/rsz_1informal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFORMALS BAY"
        android:layout_below="@+id/informal_image"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:id="@+id/informal_text"
        android:clickable="false"
        ></TextView>





    </RelativeLayout>








    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/literary_text_layout"
        android:onClick="click"
        android:layout_marginRight="55dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/pronites_text_layout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pronites_image"
            android:clickable="false"
            android:src="@mipmap/rsz_pronites"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pronites_image"
            android:text="PRONITES"
            android:clickable="false"
            android:id="@+id/pro_nites_text"
            android:textColor="@android:color/white" />

    </RelativeLayout>









</RelativeLayout>
